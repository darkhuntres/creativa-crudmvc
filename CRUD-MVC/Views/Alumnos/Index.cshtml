@model List<CRUD_MVC.Models.ViewModels.ListTablaViewModel>
@{
    ViewBag.Title = "Mis datos";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right; padding:5px;">
   <a href="~/Alumnos/Nuevo"  class="btn btn-primary">Nuevo</a>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Direccion</th>
                <th>Fecha Nacimiento</th>
                <th></th>
            </tr>
            @foreach(var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.Nombre</td>
                    <td>@oElemento.Apellido</td>
                    <td>@oElemento.Direccion</td>
                    <td>@oElemento.Fecha_Nacimiento</td>
                    <td>
                        <a class="btn btn-default" href="~/Alumnos/Editar/@oElemento.Id">Editar</a>
                        <a class="btn btn-danger" href="~/Alumnos/Eliminar/@oElemento.Id">Elimiar</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>